{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1 class="display-4 text-center">{{ feed.title }}</h1>
        <table class="table table-bordered">
            <tbody>
            <th>{{ 'author'|trans }}</th>
            <th>{{ 'title'|trans }}</th>
            <th>{{ 'description'|trans }}</th>
            {% for feedItem in feed.feedItems %}
                <tr>
                    <td>{{ feedItem.author }}</td>
                    <td>{{ feedItem.title }}</td>
                    <td><a href={{ feedItem.link }}>{{ feedItem.description|raw }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}